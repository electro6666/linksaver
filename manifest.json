{
  "manifest_version": 2,
  "name": "Link Saver",
  "version": "1.0",
  "description": "Save and manage your favorite links.",
  "permissions": ["storage", "activeTab"],
  "browser_action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
